{% extends 'base.html.twig' %}

{% block title %}TaskStatus index{% endblock %}

{% block body %}
    <h1>TaskStatus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task_status in task_statuses %}
            <tr>
                <td>{{ task_status.id }}</td>
                <td>{{ task_status.name }}</td>
                <td>{{ task_status.slug }}</td>
                <td>
                    <a href="{{ path('app_task_status_show', {'id': task_status.id}) }}">show</a>
                    <a href="{{ path('app_task_status_edit', {'id': task_status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_status_new') }}">Create new</a>
{% endblock %}
